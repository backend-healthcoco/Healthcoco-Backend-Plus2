  <body cz-shortcut-listen="true" style="font-family: 'Roboto Condensed', sans-serif">
    <div style="background-color:#ffffff;line-height:25px;margin-bottom:30px;font-family:'Open Sans',sans-serif;margin:0px auto;min-width:200px;max-width:600px">

      <div align="center">
        <img src="${imageURL}/logo1.png" style="width:280px; display:block; margin-left:auto; margin-right:auto;">
      </div>

      <div style="background-color: #faf8f8; padding:20px;">

        <div align="center" style="margin-top: 10px">
          <img src="${imageURL}/add_doc_icn.png" style="margin-top: 5px">
        </div>

        <div>
         <p style="color:#2c3335;font-size:15px;">Hello ${fName},<br><br>
